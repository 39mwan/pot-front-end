{
    "name": "pot-front-end",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "5.16.2",
        "@testing-library/react": "12.1.3",
        "@testing-library/user-event": "13.5.0",
        "@types/jest": "27.4.1",
        "@types/node": "16.11.26",
        "@types/react": "17.0.39",
        "@types/react-dom": "17.0.13",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-scripts": "5.0.0",
        "typescript": "4.6.2",
        "web-vitals": "2.1.4"
    },
    "lint-staged": {
        "*.{ts,tsx,json,md}": [
            "eslint --fix",
            "prettier-eslint --write"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "post-commit": "git update-index --again",
            "pre-push": "npm run check-types && npm run lint && npm run test --coverage --watchAll=false"
        }
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "npm run test:unit:coverage",
        "eject": "react-scripts eject",
        "test:unit": "jest --watchAll=true",
        "test:unit:coverage": "npm run test:unit -- --watchAll=false --coverage",
        "lint": "eslint ./src --ext .jsx,.js,.ts,.tsx --fix",
        "prettier": "prettier --write \"src/**/*.{ts,tsx}\""
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/preset-typescript": "7.16.7",
        "@types/jest": "27.4.1",
        "@typescript-eslint/eslint-plugin": "5.14.0",
        "@typescript-eslint/parser": "5.14.0",
        "camelcase": "6.3.0",
        "eslint": "8.10.0",
        "eslint-import-resolver-typescript": "2.5.0",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-react": "7.29.3",
        "eslint-plugin-react-hooks": "4.3.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "jest-fetch-mock": "3.0.3",
        "prettier": "2.5.1",
        "ts-jest": "27.1.3",
        "ts-mockito": "2.6.1"
    }
}
